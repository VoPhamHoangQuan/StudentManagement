<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".View.Login_ForgetPass.Admin.User.User_AddNewTeacher">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="ADD NEW TEACHER"
            android:textColor="@color/colorBackground"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgReturn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_undo"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:tint="@color/colorBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/white_rectangle_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="ID TEACHER"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAddNewteacherIdTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingRight="44.3dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginRight="44.3dp"
            android:layout_marginBottom="5dp"
            android:background="#d5d5d5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="NAME"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAddnewtecherNameTeacher"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingRight="44.3dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginRight="44.3dp"
            android:layout_marginBottom="5dp"
            android:background="#d5d5d5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="PHONE"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAddnewtecherPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingRight="44.3dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginRight="44.3dp"
            android:layout_marginBottom="5dp"
            android:background="#d5d5d5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="EMAIL"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAddnewtecherEmail"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingRight="44.3dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginRight="44.3dp"
            android:layout_marginBottom="5dp"
            android:background="#d5d5d5" />


    </LinearLayout>

    <Button

        android:id="@+id/btnAddNewteacherAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginBottom="104dp"
        android:text="ADD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        app:layout_constraintVertical_bias="1.0" />


</LinearLayout>