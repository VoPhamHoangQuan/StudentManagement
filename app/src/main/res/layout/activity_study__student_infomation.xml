<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".View.Login_ForgetPass.Admin.Study.Study_StudentInfomation">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Student Infomaion"
            android:textColor="@color/colorBackground"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgReturn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_undo"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:tint="@color/colorBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="112dp"
            android:background="@drawable/white_rectangle_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="ID"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText

                android:id="@+id/edtIdStudnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:enabled="false"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:paddingRight="44.3dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="NAME"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText

                android:id="@+id/edtStudentName"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:maxLines="1"
                android:paddingRight="44.3dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="GENDER"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText

                android:id="@+id/edtStudentGender"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:maxLines="1"
                android:paddingRight="44.3dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="BIRTHDATE"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtStudentBD"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:maxLines="1"
                android:paddingRight="44.3dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="PHONE"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtStudentPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:maxLines="1"
                android:paddingRight="44.3dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="ADDRESS"
                android:textColor="#605E5E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtStudentaddress"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:maxLines="1"
                android:paddingRight="44.3dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="44.3dp"
                android:layout_marginBottom="5dp"
                android:background="#d5d5d5" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>