<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".View.Login_ForgetPass.Admin.Classes.Classes_AddClass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/Subject"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="ADD CLASS"
            android:textColor="@color/colorBackground"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgReturn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_undo"
            app:layout_constraintBottom_toBottomOf="@id/Subject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/Subject"
            app:tint="@color/colorBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/id_class"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtIdClass"
            android:hint="Subject00Class00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:paddingRight="44.3dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="NAME"
            android:textColor="#605E5E"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edtClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:paddingRight="44.3dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="ID SUBJECT"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtIdSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:paddingRight="44.3dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="ID TEACHER"
            android:textColor="#605E5E"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edtAddClassIdTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:paddingRight="44.3dp" />

<!--        <Spinner-->
<!--            android:id="@+id/spinIdTeacher"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="2dp"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:paddingRight="44.3dp" />-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="MAX STUDENT"
            android:textColor="#605E5E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtMaxStudentClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:paddingRight="44.3dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="SCHEDULE"
            android:textColor="#605E5E"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edtClassTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:paddingRight="44.3dp"
            android:hint="thứ 2, tiết 1-3"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="44.3dp"
            android:background="#d5d5d5" />

    </LinearLayout>


    <Button
        android:id="@+id/btnAddClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="ADD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        app:layout_constraintVertical_bias="0.787" />

</LinearLayout>